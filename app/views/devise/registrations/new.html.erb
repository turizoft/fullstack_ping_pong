<div id="signup-content" class="auth-content">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form #{flash[:error].present? ? 'error' : ''}" }) do |f| %>

        <h2><%= image_tag 'thick_logo_dark_80a', class: 'ui mini image' %> Sign up to Ping Pong</h2>

        <div class="ui stacked segment">
          <div class="field">
            <div class="ui input">
              <%= f.text_field :username, placeholder: 'Username', autofocus: true %>
            </div>
            <%= field_errors f, :username, 'black left pointing' %>
          </div>

          <div class="field">
            <div class="ui input">
              <%= f.email_field :email, placeholder: 'E-mail' %>
            </div>
            <%= field_errors f, :email, 'black left pointing' %>
          </div>

          <div class="field">
            <div class="ui input">
              <%= f.password_field :password, placeholder: 'Password', autocomplete: 'off' %>
            </div>
            <%= field_errors f, :password, 'black left pointing' %>
          </div>

          <div class="field">
            <div class="ui input">
              <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: 'off' %>
            </div>
            <%= field_errors f, :password_confirmation, 'black left pointing' %>
          </div>

          <div class="actions">
            <%= f.submit 'Sign up', class: 'ui fluid big blue submit button' %>
          </div>

          <div class="ui divider"></div>

          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>