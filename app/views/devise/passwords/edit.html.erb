<div id="edit-password-content" class="auth-content">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <h2><%= image_tag 'thick_logo_dark_80a', class: 'ui mini image' %> Change your password</h2>

        <div class="field">
          <div class="ui input">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, placeholder: 'New password', autofocus: true, autocomplete: 'off' %>
          </div>
          <%= field_errors f, :password, 'black left pointing' %>
        </div>

        <div class="field">
          <div class="ui input">
            <%= f.password_field :password_confirmation, placeholder: 'Confirm new password' autocomplete: 'off' %>
          </div>
          <%= field_errors f, :password_confirmation, 'black left pointing' %>
        </div>

        <div class="actions">
          <%= f.submit 'Change my password', class: 'ui fluid big blue submit button' %>
        </div>

        <div class="ui divider"></div>

        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>